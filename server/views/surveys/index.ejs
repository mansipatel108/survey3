<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <h1>Surveys</h1>

    <a href="/surveys/add">Add a New Survey</a>
    <a href = "/surveys/respondSurvey"> RESPONSE </a>

    <ul class="list-group">
        <% for (var i = 0; i < surveys.length; i++) { %>
            <li class="list-group-item">
                name: 
                <a href="/surveys/<%= surveys[i]._id %>" title="Edit User">
                    <%= surveys[i].name %>
                </a>
                <br />
                category: <%= surveys[i].category %>
                <br />
                Short Question 1: <%= surveys[i].shortQue1 %>
                <br />
                Short Question 2: <%= surveys[i].shortQue2 %>
                <br />
                Short Question 3: <%= surveys[i].shortQue3 %>
                <br />
                Short Question 4: <%= surveys[i].shortQue4 %>
                <br />
                Short Question 5: <%= surveys[i].shortQue4 %>
            </li>
        <% } %>
    </ul>
</main>
